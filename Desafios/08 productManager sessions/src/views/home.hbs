<div class="container">
  <h3>Crear Producto Producto</h3>

  <div class="row g-3">

    <div class="col-md-4">
      <label for="nameProduct" class="form-label">Nombre del Producto</label>
      <input
        type="text"
        class="form-control"
        id="nameProduct"
        placeholder="MacBook Pro"
      />
    </div>
    <div class="col-md-4">
      <label for="categoryProduct" class="form-label">Categoria</label>
      <select class="form-select col-3" id="categoryProduct">
        <option selected>Seleccionar categoria...</option>
        <option value="computer">computer</option>
        <option value="watchs">watchs</option>
        <option value="cellPhones">cellPhones</option>
        <option value="electrodomestics">electrodomestics</option>
        <option value="transports">transports</option>
        <option value="speakers">speakers</option>
        <option value="otros">otros</option>
      </select>
    </div>

    <div class="col-md-4">
      <label for="thumbnailProduct" class="form-label">Price</label>
      <input type="number" class="form-control" id="price" placeholder="U$S" />
    </div>
    <div class="col-md-4">
      <label for="thumbnailProduct" class="form-label">Url Imagen</label>
      <input type="text" class="form-control" id="thumbnailProduct" placeholder="https:/imagen.com/"/>
    </div>
    <div class="col-md-4">
      <label for="codeProduct" class="form-label">Codigo Identificacion</label>
      <input
        type="text"
        class="form-control"
        id="codeProduct"
        maxlength="6"
        placeholder="CMP123"
      />
    </div>
    <div class="col-md-4">
      <label for="stockProduct" class="form-label">Stock Disponible</label>
      <input type="number" class="form-control" id="stockProduct" value="10" />
    </div>
    <div class="col-md-12">
      <label for="descriptioProduct" class="form-label">Descripcion</label>
      <input
        type="text"
        class="form-control"
        id="descriptioProduct"
        placeholder="Computadora Apple"
      />
    </div>
    <div class="col-md-12">
      <button
        type="submit"
        class="btn btn-dark"
        onclick="sendDataNewProduct()"
      >Crear Producto</button>

    </div>
  </div>

</div>
<h3 class="mt-4 mb-4 container">Lista de Productos</h3>
<table class="table table-striped container">
  <thead class="table-dark">
    <tr>
      {{! <th scope="col">Id</th> }}
      <th scope="col">Tittle</th>
      <th scope="col">Description</th>
      <th scope="col">Price</th>
      <th scope="col">Thumbnail</th>
      <th scope="col">Options</th>
    </tr>
  </thead>
  <tbody>
    {{! estos products se los tengo que pasar desde el render del views.router }}
    {{#if products.length}}
      {{#each products}}
        <tr>
          {{!-- <th scope="row">{{this.Id}}</th> --}}
          <td>{{this.tittle}}</td>
          <td>{{this.description}}</td>
          <td>U$D {{this.price}}</td>
          <td><img
              src={{this.thumbnail}}
              alt={{this.tittle}}
              height="72px"
              width="72px"
            /></td>
          <td><button onclick="botonMas()">+</button></td>
        </tr>
      {{/each}}
    {{/if}}
  </tbody>
</table>

